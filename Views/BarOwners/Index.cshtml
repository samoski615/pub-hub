@model IEnumerable<PubHub.Models.BarOwner>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Index">Bar Owner Home</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfBar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BarOpen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BarClose)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfBar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BarOpen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BarClose)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BarOwnerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BarOwnerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BarOwnerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
